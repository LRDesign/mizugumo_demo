- @product ||= Product.new
- if @product.new_record?
  - url = slow_products_path
-else
  - url = slow_product_path(@product)
= form_for(@product, :url => url) do |f|

  foo
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:

      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :price
    %br
    = f.text_field :price
  .actions
    = f.submit
